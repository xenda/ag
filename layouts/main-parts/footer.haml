            AG Resortes 
      %ul#footer-nav.clearfix
        - get_menu.each do |item|
          - class_value   = item[:class] == @item[:class] ? "selected" : ""f 
          - top_menu_path = get_path + item[:path] + item[:href] + '.html'
          %li.item
            %a{:class => class_value, :title=>item[:title], :href=> top_menu_path }<
              = item[:title]
            - if item[:submenus] != false
              %ul.sub-menu
                :ruby
                  path = ""
                  path = get_path + item[:path] if @item[:parent] != item[:class]
                - item[:submenus].each do |sub|
                  - item_class = sub[:class] == @item[:class] ? "selected" : ""
                  - item_path  = path + sub[:href] + '.html' 
                  %li<                   
                    %a{:class => item_class, :title=>sub[:title], :href=> item_path }<
                      = sub[:title]
